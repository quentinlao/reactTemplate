{
    "compilerOptions": {
        "esModuleInterop": true,
        // React 17 production
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["dom", "esnext"],
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "esnext",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "baseUrl": ".", // ./src to shorthen import
        "types": ["jest", "cypress"]
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
