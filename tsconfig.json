{
    "compilerOptions": {
        "esModuleInterop": true,
        // React 17 production
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": ["dom", "esnext"],
        "strict": true,
        "sourceMap": true,
        "target": "esnext",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "baseUrl": ".",
        "types": ["jest"],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
